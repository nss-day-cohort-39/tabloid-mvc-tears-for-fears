@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "ActiveStatus";
}

<h1>Deactivate @Model.DisplayName</h1>

<div class="container pt-5">
    <div class="userProfile">
        <section class="px-3">
            <div class="row justify-content-between">
                <h1 class="text-secondary">@Model.DisplayName</h1>
                <h1 class="text-black-50">@Model.FullName</h1>
            </div>
        </section>
        <hr />
        @if (!string.IsNullOrWhiteSpace(Model.ImageLocation))
        {
            <section class="row justify-content-center">
                <div>
                    <img src="@Model.ImageLocation" />
                </div>
            </section>
        }
        else
        {
            <section class="row justify-content-center">
                <div>
                    <img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" />
                </div>
            </section>
        }
        <section class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            <span>Avtive Status</span>
                        </th>
                        <th>
                            @if (Model.Active)
                            {
                                <span>Deactivate User</span>
                            }
                            else
                            {
                                <span>Reactivate User</span>
                            }
                        </th>
                        <th>
                            @if (Model.Active)
                            {
                                <span>Do Not Deactivate User</span>
                            }
                            else
                            {
                                <span>Do Not Reactivate User</span>
                            }
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @if (Model.Active)
                            {
                                <span>Active User</span>
                            }
                            else
                            {
                                <span>Inactive User</span>
                            }
                        </td>
                        <td>
                            @if (Model.Active)
                            {
                                <form asp-action="ActiveStatus" asp-route-id="@Model.Id" asp-route-user="@Model">
                                    <input type="submit" value="Deactivate" class="btn btn-danger" />
                                </form>
                            }
                            else
                            {
                                <form asp-action="ActiveStatus" asp-route-id="@Model.Id" asp-route-user="@Model">
                                    <input type="submit" value="Reactivate" class="btn btn-danger" />
                                </form>
                            }
                        </td>
                        <td>
                            @if (Model.Active)
                            {
                                <form asp-action="Index" >
                                    <input type="submit" value="Cancel Deactivation" class="btn btn-primary" />
                                </form>
                            }
                            else
                            {
                                <form asp-action="Index">
                                    <input type="submit" value="Cancel Reactivation" class="btn btn-primary" />
                                </form>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</div>