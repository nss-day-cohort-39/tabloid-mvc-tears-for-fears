@model IEnumerable<TabloidMVC.Models.UserProfile>

@{
    ViewData["Title"] = "ViewDeactivated";
}

<h1>View Deactivated User Profies</h1>

<div class="container pt-5">

    <h1>Categories</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserType.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType.Name)
                    </td>
                    <td>
                        <a asp-action="ActiveStatus" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Deactivate">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>