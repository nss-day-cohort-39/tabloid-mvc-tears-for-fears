@model TabloidMVC.Models.ViewModels.PostTagViewModel

@{
    ViewData["Title"] = "ManageRemoveTags";
}

<h1>Manage Tag Removal</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <span>Tag Name</span>
            </th>
            <th>
                <span>Remove Tag Relationship</span>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model.TagOptions)
        {
            <tr>
                <td>
                    <span>@tag.Name</span>
                </td>
                <td>
                    <form asp-action="ManageRemoveTags" asp-route-postId="@Model.Post.Id" asp-route-tagId="@tag.Id">
                        <input type="submit" value="Remove" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Post" asp-action="Details" asp-route-id="@Model.Post.Id">Back to Post Details</a>